@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
   <div class="user_option_box">
        <a id="manage" class="account-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    
        <form id="logoutForm"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" >Logout</button>
        </form>
    </div>
     
}
else
{
      <div class="user_option_box">
        <a class="account-link" id="register" asp-area="Identity" asp-page="/Account/Register">
            <i class="fa fa-user" aria-hidden="true"></i>
            <span>
                Register
            </span>
            </a>
          
   
      <a class="account-link" id="register" asp-area="Identity" asp-page="/Account/Login">
            <i class="fa fa-user" aria-hidden="true"></i>
            <span>
                Login
            </span>
        </a>
    </div>
}

