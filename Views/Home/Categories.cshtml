@model IEnumerable<Category>
<!-- product section -->


<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
              Categories
            </h2>
        </div>
    </div>
    <div class="row">

   

    @foreach(var item in Model){

    
        
           <div class="col-sm-6 col-lg-4">
                <div class="box">
                    <div class="img-box">
                        <img src="@Html.DisplayFor(modelItem => item.ImagePath)" alt="">
                       @if(item.CategoryName=="Laptops"){
                        <a href="@Url.Action("Notebooks","Home")" class="add_cart_btn">
                            <span>
                               View
                            </span>
                        </a>
                       }
                        @if (item.CategoryName == "Computers") { 
                        <a href="@Url.Action("Computers","Home")" class="add_cart_btn">
                            <span>
                                View
                            </span>
                        </a>

                        }
                        @if(item.CategoryName=="Phones"){
                        <a href="@Url.Action("Phones","Home")" class="add_cart_btn">
                            <span>
                               View
                            </span>
                        </a>
                        }
                        @if (item.CategoryName == "Cameras") { 
                        <a href="@Url.Action("Cameras","Home")" class="add_cart_btn">
                            <span>
                                View
                            </span>
                        </a>
                        }
                    </div>
                    <div class="detail-box">
                        <h5>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </h5>
                        
                    </div>
                </div>
            </div>
          


     }


    </div>
    </section>

<!-- end product section -->
